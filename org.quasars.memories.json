{
	"id": "org.quasars.memories",
	"runtime": "org.gnome.Platform",
	"runtime-version": "49",
	"sdk": "org.gnome.Sdk",
	"command": "memories",
	"finish-args": [
		"--share=network",
		"--share=ipc",
		"--socket=fallback-x11",
		"--device=dri",
		"--socket=wayland"
	],
	"build-options": {
		"build-args": [
			"--share=network"
		]
	},
	"cleanup": [
		"/include",
		"/lib/pkgconfig",
		"/man",
		"/share/doc",
		"/share/gtk-doc",
		"/share/man",
		"/share/pkgconfig",
		"*.la",
		"*.a"
	],
	"modules": [
		{
			"name": "python3-requests",
			"buildsystem": "simple",
			"build-commands": [
				"pip3 install --prefix=${FLATPAK_DEST} requests"
			]
		},
		{
			"name": "python3-markdown",
			"buildsystem": "simple",
			"build-commands": [
				"pip3 install --verbose --exists-action=i --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} \"markdown\" --no-build-isolation"
			],
			"sources": [
				{
					"type": "file",
					"url": "https://files.pythonhosted.org/packages/70/81/54e3ce63502cd085a0c556652a4e1b919c45a446bd1e5300e10c44c8c521/markdown-3.10-py3-none-any.whl",
					"sha256": "b5b99d6951e2e4948d939255596523444c0e677c669700b1d17aa4a8a464cb7c"
				}
			]
		},
		{
			"name": "memories",
			"builddir": true,
			"buildsystem": "meson",
			"sources": [
				{
					"type": "dir",
					"path": "."
				}
			]
		}
	]
}