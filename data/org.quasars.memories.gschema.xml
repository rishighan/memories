<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="memories">
  <schema id="org.quasars.memories" path="/org/quasars/memories/">
    <key name="server-url" type="s">
      <default>''</default>
      <summary>Memos server URL</summary>
    </key>
    <key name="api-token" type="s">
      <default>''</default>
      <summary>API token</summary>
    </key>
    <key name="auto-refresh-interval" type="i">
      <default>5</default>
      <summary>Auto-refresh interval in minutes</summary>
      <description>Automatically refresh memos list. Valid values: 5, 10, 15 minutes</description>
    </key>
  </schema>
</schemalist>
