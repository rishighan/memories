<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="MemoriesWindow" parent="AdwApplicationWindow">
    <property name="title" translatable="yes">Memories</property>
    <property name="default-width">600</property>
    <property name="default-height">800</property>
    <property name="content">
      <object class="GtkStack" id="main_stack">
        <property name="transition-type">slide-left-right</property>

        <!-- Connection Screen -->
        <child>
          <object class="GtkStackPage">
            <property name="name">connection</property>
            <property name="child">
              <object class="AdwToolbarView">
                <child type="top">
                  <object class="AdwHeaderBar">
                    <child type="end">
                      <object class="GtkMenuButton">
                        <property name="primary">True</property>
                        <property name="icon-name">open-menu-symbolic</property>
                        <property name="tooltip-text" translatable="yes">Main Menu</property>
                        <property name="menu-model">primary_menu</property>
                      </object>
                    </child>
                  </object>
                </child>
                <property name="content">
                  <object class="GtkOverlay">
                    <property name="child">
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <style>
                          <class name="gradient-bg"/>
                        </style>
                      </object>
                    </property>
                    <child type="overlay">
                      <object class="AdwClamp">
                        <property name="maximum-size">500</property>
                        <property name="tightening-threshold">400</property>
                        <child>
                          <object class="GtkBox">
                            <property name="orientation">vertical</property>
                            <property name="spacing">32</property>
                            <property name="margin-top">60</property>
                            <property name="margin-bottom">60</property>
                            <property name="margin-start">24</property>
                            <property name="margin-end">24</property>
                            <property name="valign">center</property>

                            <child>
                              <object class="GtkBox">
                                <property name="orientation">vertical</property>
                                <property name="spacing">12</property>
                                <property name="halign">center</property>

                                <child>
                                  <object class="GtkLabel">
                                    <property name="label" translatable="yes">Memories</property>
                                    <style>
                                      <class name="title-1"/>
                                    </style>
                                  </object>
                                </child>

                                <child>
                                  <object class="GtkLabel">
                                    <property name="label" translatable="yes">Your Memos, Everywhere</property>
                                    <style>
                                      <class name="title-3"/>
                                      <class name="dim-label"/>
                                    </style>
                                  </object>
                                </child>
                              </object>
                            </child>

                            <child>
                              <object class="GtkBox">
                                <property name="orientation">vertical</property>
                                <property name="spacing">20</property>
                                <style>
                                  <class name="card"/>
                                </style>
                                <property name="margin-start">12</property>
                                <property name="margin-end">12</property>

                                <child>
                                  <object class="GtkBox">
                                    <property name="orientation">vertical</property>
                                    <property name="margin-top">24</property>
                                    <property name="margin-bottom">24</property>
                                    <property name="margin-start">24</property>
                                    <property name="margin-end">24</property>
                                    <property name="spacing">20</property>

                                    <child>
                                      <object class="GtkLabel">
                                        <property name="label" translatable="yes">Connect to Server</property>
                                        <property name="halign">start</property>
                                        <style>
                                          <class name="title-2"/>
                                        </style>
                                      </object>
                                    </child>

                                    <child>
                                      <object class="AdwPreferencesGroup">
                                        <child>
                                          <object class="AdwEntryRow" id="url_entry">
                                            <property name="title" translatable="yes">Server URL</property>
                                          </object>
                                        </child>

                                        <child>
                                          <object class="AdwPasswordEntryRow" id="token_entry">
                                            <property name="title" translatable="yes">API Token</property>
                                          </object>
                                        </child>
                                      </object>
                                    </child>

                                    <child>
                                      <object class="GtkButton" id="connect_button">
                                        <property name="label" translatable="yes">Connect</property>
                                        <property name="halign">center</property>
                                        <property name="width-request">200</property>
                                        <style>
                                          <class name="suggested-action"/>
                                          <class name="pill"/>
                                        </style>
                                      </object>
                                    </child>

                                    <child>
                                      <object class="GtkLabel" id="status_label">
                                        <property name="wrap">true</property>
                                        <property name="justify">center</property>
                                        <property name="halign">center</property>
                                      </object>
                                    </child>

                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </property>
          </object>
        </child>

        <!-- Memos List Screen -->
        <child>
          <object class="GtkStackPage">
            <property name="name">memos</property>
            <property name="child">
              <object class="AdwToolbarView">
                <child type="top">
                    <object class="AdwHeaderBar">
                      <property name="title-widget">
                        <object class="AdwWindowTitle">
                          <property name="title" translatable="yes">Your Memos</property>
                        </object>
                      </property>
                      <child type="start">
                        <object class="GtkToggleButton" id="search_button">
                          <property name="icon-name">system-search-symbolic</property>
                          <property name="tooltip-text">Search memos</property>
                        </object>
                      </child>
                       <child type="start">
                        <object class="GtkButton" id="new_memo_button">
                          <property name="icon-name">list-add-symbolic</property>
                          <property name="tooltip-text">New memo</property>
                          <style>
                            <class name="suggested-action"/>
                          </style>
                        </object>
                      </child>
                      <child type="end">
                        <object class="GtkMenuButton">
                          <property name="primary">True</property>
                          <property name="icon-name">open-menu-symbolic</property>
                          <property name="tooltip-text" translatable="yes">Main Menu</property>
                          <property name="menu-model">primary_menu</property>
                        </object>
                      </child>
                    </object>
                </child>
                
                <!-- Add search bar after header -->
                <child type="top">
                  <object class="GtkSearchBar" id="search_bar">
                    <property name="search-mode-enabled">false</property>
                    <child>
                      <object class="AdwClamp">
                        <property name="maximum-size">800</property>
                        <child>
                          <object class="GtkSearchEntry" id="search_entry">
                            <property name="placeholder-text">Search memos...</property>
                            <property name="hexpand">true</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <property name="content">
                  <object class="GtkScrolledWindow" id="scrolled_window">
                    <property name="hscrollbar-policy">never</property>
                    <property name="vexpand">true</property>
                    <child>
                      <object class="AdwClamp">
                        <property name="maximum-size">800</property>
                        <child>
                          <object class="GtkBox" id="memos_container">
                            <property name="orientation">vertical</property>
                            <property name="spacing">12</property>
                            <property name="margin-top">12</property>
                            <property name="margin-bottom">12</property>
                            <property name="margin-start">12</property>
                            <property name="margin-end">12</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
                <!-- Status Bar -->
                <child type="bottom">
                  <object class="GtkActionBar" id="status_bar">
                    <property name="revealed">true</property>
                    <child>
                      <object class="GtkBox">
                        <property name="spacing">12</property>
                        <property name="vexpand">true</property>
                        <child>
                          <object class="GtkLabel" id="server_label">
                            <property name="label">Connected to server</property>
                            <property name="xalign">0</property>
                            <style>
                              <class name="caption"/>
                              <class name="dim-label"/>
                            </style>
                          </object>
                        </child>
                        
                        <child>
                          <object class="GtkLabel" id="connection_status_label">
                            <property name="label">‚óè</property>
                            <property name="tooltip-text">Connected</property>
                            <style>
                              <class name="success"/>
                            </style>
                          </object>
                        </child>
                        
                      </object>
                    </child>
                    <child type="end">
                      <object class="GtkBox">
                        <property name="spacing">12</property>
                        <property name="vexpand">true</property>
                        <child>
                          <object class="GtkLabel" id="memo_count_label">
                            <property name="label">0 memos</property>
                            <style>
                              <class name="caption"/>
                              <class name="dim-label"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>

      </object>
    </property>
  </template>


  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_Preferences</attribute>
        <attribute name="action">app.preferences</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
        <attribute name="action">app.shortcuts</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_About Memories</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
</interface>

